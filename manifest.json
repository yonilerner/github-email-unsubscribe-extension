{
  "manifest_version": 3,
  "name": "PR Link Clicker",
  "version": "1.0",
  "description": "Clicks a specific link in GitHub pull request emails.",
  "permissions": [],
  "host_permissions": ["*://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "click": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "Click on the PR link"
    }
  }
}
